@{
    ViewData["Title"] = "Add New Order";
}

<h2>Add New Order</h2>

<h4>Add Suggested Order From Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Location</label>
                @Html.DropDownList("LocationID", new SelectList(ViewBag.Locations))
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

