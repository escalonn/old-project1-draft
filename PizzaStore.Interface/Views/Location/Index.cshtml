@model IEnumerable<PizzaStore.Interface.Models.Location>

@{
    ViewData["Title"] = "Location Index";
}

<h2>Location Index</h2>

<p>
    <a asp-action="Create">Create New Location</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inventory)
                </td>
                <td>
                    @Html.ActionLink("Order History", "Details", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
